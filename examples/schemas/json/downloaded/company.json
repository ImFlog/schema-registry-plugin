{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://github.com/imflog/kafka-schema-registry/examples/json/company.json",
  "definitions": {
    "Company": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "address": {
          "$ref": "#address"
        },
        "thumbnail_url": {
          "type": "string"
        },
        "company_type": {
          "type": "string"
        },
        "sectors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "id"
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "company": {
      "$ref": "#/definitions/Company"
    }
  }
}
